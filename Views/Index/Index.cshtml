<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Razor Practice</title>
</head>
<body>
    @{
        string[] foods = { "Apple Pie", "Burritos", "Clams Casino", "Donuts" };

        foreach (var food in foods)
        {
            if (food[0] == 'C')
            {
                <p style="color: red">@food</p>
                continue;
            }
            <p>@food</p>
        }
    }
</body>
</html>